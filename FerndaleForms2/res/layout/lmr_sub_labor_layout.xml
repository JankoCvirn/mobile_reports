<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/myScrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >
	<!-- Heading -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    
    <!-- Main Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView1"
            style="@style/txtMainHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="FIELD LABOR AND MATERIALS REPORT -Labor Details"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:orientation="vertical" >

            <!--  <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/textView1"
                    style="@style/txtMainHeadingLMROverwievSub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="LABOR DETAILS"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <GridView
                    android:id="@+id/gridViewLabor"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="1" >
                </GridView>
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/txtMainHeadingLMROverwievMaterial"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFA500"
                    android:paddingTop="5dp"
                    android:text="MATERIAL DETAILS"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <GridView
                    android:id="@+id/gridViewMaterial"
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:numColumns="1" >
                </GridView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView10"
                style="@style/txtMainHeadingLMROverwievMaterial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFA500"
                android:text="EQUIPMENT DETAILS"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <GridView
                android:id="@+id/gridViewEquip"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:numColumns="1" >
            </GridView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView10"
                style="@style/txtMainHeadingLMROverwievSub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SUBCONTRACTOR DETAILS"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <GridView
                android:id="@+id/gridViewSubCon"
                android:layout_width="600dp"
                android:layout_height="wrap_content"
                android:numColumns="1" >
            </GridView>
        </LinearLayout>
    </LinearLayout>
        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView1"
            style="@style/txtMainHeadingLMROverwievSub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="5dp"
            android:background="#70c656"
            android:gravity="center_horizontal"
            android:text="FIELD LABOR AND MATERIALS REPORT - Labor details"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>
    <!-- MainField Buttons -->
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp" >

    	<GridView
    	    android:id="@+id/gridView1"
    	    android:layout_width="600dp"
    	    android:layout_height="wrap_content"
    	    android:cacheColorHint="#00000000"
    	    android:clipChildren="true"
    	    android:columnWidth="90dp"
    	    android:gravity="center"
    	    android:horizontalSpacing="5dip"
    	    android:numColumns="1"
    	    android:stretchMode="columnWidth"
    	    android:verticalSpacing="5dip" />

    </LinearLayout>
    <!-- worker,mat,eqip  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" 
        android:padding="20dp">
        
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView5"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/txtMainHeading"
            android:text="Select a worker:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/spinnerLMRSubLaborWorker"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
		</LinearLayout>
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView6"
            style="@style/txtMainHeading"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/enterNewLMR"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etxtNewLMRWorker"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="enter new worker" 
			android:inputType="text|textCapWords"> 
            <requestFocus />
        </EditText>
        </LinearLayout>
		<LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView2"
            style="@style/txtMainHeading"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="ST:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etxtSTimeLMRLabor"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="amount"
            android:inputType="number|numberDecimal" />
        </LinearLayout>
		<LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView3"
            style="@style/txtMainHeading"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="HT:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etxtHTimeLMRLabor"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="amount"
            android:inputType="number|numberDecimal" />
        </LinearLayout>
		<LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/textView4"
            style="@style/txtMainHeading"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="DT:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etxtDTimeLMRLabor"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="amount"
            android:inputType="number|numberDecimal"/>
		</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:paddingTop="20dp" >

		<Button
		    android:id="@+id/btnCreateSubLabor"
		    style="@style/main_buttons3"
		    android:layout_width="250dp"
		    android:layout_height="wrap_content"
		    android:background="@drawable/buttonshape2"
		    android:text="Add Labor"
		     />
    </LinearLayout>
    </LinearLayout>

</ScrollView>
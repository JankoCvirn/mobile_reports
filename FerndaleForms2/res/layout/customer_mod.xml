<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#000000" >

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:paddingTop="10dip" >
        
         <TextView
             android:id="@+id/textView1"
             style="@style/txtMainHeading"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:gravity="center"
             android:text="Modify Customer data."
             android:textAppearance="?android:attr/textAppearanceLarge" />

		<TableRow
		    android:id="@+id/tableRow2"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:paddingTop="15dp" >

			<TextView
			    android:id="@+id/TextView01"
			    style="@style/txtMainHeading"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Select Customer"
			    android:textAppearance="?android:attr/textAppearanceLarge" />

			<Spinner
			    android:id="@+id/spinnerCustMod"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/textView2"
                style="@style/txtMainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer name:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/etxtModCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="name" 
                android:inputType="text|textCapWords"
                >
                <requestFocus />
            </EditText>
             
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:orientation="vertical"
            android:gravity="center"
            
             >

            <TextView
                android:id="@+id/textView3"
                style="@style/txtMainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street and number:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/etxtModCustomerStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="street" 
                android:inputType="text|textCapWords"
                />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/textView4"
                style="@style/txtMainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/etxtModCustomerCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textCapWords"
                android:hint="city" >
            </EditText>
             
        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            
            android:paddingTop="10dip" >

            <TextView
                android:id="@+id/textView5"
                style="@style/txtMainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/etxtModCustomerState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textCapWords"
                android:hint="state code" >
            </EditText>
             
        </TableRow>
		<TableRow
		    android:id="@+id/tableRow8"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" android:gravity="center">

            <TextView
                android:id="@+id/textView6"
                style="@style/txtMainHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact details:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/etxtModCustomerContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text|textCapWords"
                android:hint="Contact info" >
            </EditText>
		    
		    
		</TableRow>
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="10dip" >

            <Button
                android:id="@+id/btnUpdateCustomer"
                style="@style/main_buttons2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Update " />

        </TableRow>

        

        
    </TableLayout>

   
</ScrollView>
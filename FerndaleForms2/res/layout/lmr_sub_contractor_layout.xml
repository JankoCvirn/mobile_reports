<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/myScrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >
	<!-- Heading -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    
    <!-- Main Fields -->

        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView1"
            style="@style/txtMainHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="FIELD LABOR AND MATERIALS REPORT -SubContractor Details"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </LinearLayout>
    <!-- MainField Buttons -->
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/textView1"
                    style="@style/txtMainHeadingLMROverwievSub"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="LABOR DETAILS"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <GridView
                    android:id="@+id/gridViewLabor"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:numColumns="1" >
                </GridView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <TextView
                    android:id="@+id/textView2"
                    style="@style/txtMainHeadingLMROverwievMaterial"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="MATERIAL DETAILS"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <GridView
                    android:id="@+id/gridViewMaterial"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:numColumns="1" >
                </GridView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView10"
                style="@style/txtMainHeadingLMROverwievMaterial"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="EQUIPMENT DETAILS"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <GridView
                android:id="@+id/gridViewEquip"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:numColumns="1" >
            </GridView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/textView10"
                style="@style/txtMainHeadingLMROverwievSub"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="SUBCONTRACTOR DETAILS"
                android:textAppearance="?android:attr/textAppearanceLarge" />
            <GridView
                android:id="@+id/gridViewSubCon"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:numColumns="1" >
            </GridView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp" >
        <TextView
            android:id="@+id/TextView01"
            style="@style/txtMainHeadingLMROverwievSub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="SUBCONTRACTOR DETAILS"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    	<GridView
            android:id="@+id/gridViewLMRSubCon"
             android:stretchMode="columnWidth"
                android:cacheColorHint="#00000000"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:numColumns="1"
                android:gravity="center"
                android:clipChildren="true"
                android:horizontalSpacing="5dip"
                android:verticalSpacing="5dip"
                android:columnWidth="90dp" />
    </LinearLayout>

    <!-- worker,mat,eqip  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" 
        android:padding="20dp">

        <TextView
            android:id="@+id/textView2"
            style="@style/txtMainHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Select subcontractor"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        <Spinner
            android:id="@+id/spinnerLMRSubCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView4"
            style="@style/txtMainHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR ENTER NEW" />

        <EditText
            android:id="@+id/etxtSubCont"
            style="etxtNewEquip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="enter new subcontractor" 
            android:inputType="text|textCapWords"
            />

        <TextView
            android:id="@+id/textView3"
            style="@style/txtMainHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="amount of hours"
            android:text="Hours"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/etxtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="amount of hours"
            android:inputType="number|numberDecimal" >

            <requestFocus />
        </EditText>

        

    </LinearLayout>

   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center"
        android:paddingTop="20dp"
        >
        <Button
            android:id="@+id/btnCreateEquip"
            style="@style/main_buttons2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add SubContractor"
            />

    </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/myScrollView"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >
	<!-- Heading -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    
    <!-- Main Fields -->

        

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView1"
            style="@style/txtMainHeading"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="FIELD LABOR AND MATERIALS REPORT - Details"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </LinearLayout>
    <!-- MainField Buttons -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
        android:gravity="center"
        android:orientation="vertical"
       
        android:paddingTop="20dp" >
        <EditText
            android:id="@+id/editTextLMR_Sub2_JobNumber"
            style="@style/txtGridLMROverwiev2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:gravity="center"
            >
            
        </EditText>

    </LinearLayout>

    <!-- worker,mat,eqip  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" 
        android:padding="20dp">
        <TextView
            android:id="@+id/TextView02"
            style="@style/txtMainHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btnCreateLabor"
            style="@style/main_buttons2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Labor" />
        <TextView
            android:id="@+id/TextView01"
            style="@style/txtMainHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000" />

        <Button
            android:id="@+id/btnCreateMaterial"
            style="@style/main_buttons2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Materials"
            />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
             android:textColor="#000000"
            style="@style/txtMainHeading"
            android:textAppearance="?android:attr/textAppearanceLarge" />
                <Button
            android:id="@+id/btnCreateEquip"
            style="@style/main_buttons2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Add Equipement" />
                <TextView
                    android:id="@+id/textView1"
                    style="@style/txtMainHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#000000" />
                <Button
                    android:id="@+id/btnCreateSubC"
                    style="@style/main_buttons2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Add SubContractor" />
    </LinearLayout>

   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:gravity="center"
        android:paddingTop="20dp"
        >
        <Button
            android:id="@+id/btnLMRSub2Finish"
            style="@style/main_buttons3"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Finish" />
    </LinearLayout>
    </LinearLayout>

</ScrollView>